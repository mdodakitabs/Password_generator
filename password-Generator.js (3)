// Function to generate a random password
function generatePassword() {
  // Define the characters that can be used in the password
  const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
  
  // Initialize an empty string to store the password
  let password = "";
  
  // Generate a password of length 8
  for (let i = 0; i < 8; i++) {
    // Randomly select a character from the chars string and add it to the password
    password += chars.charAt(Math.floor(Math.random() * chars.length));
  }
  
  // Set the generated password as the value of the element with id "password"
  document.getElementById("password").value = password;
}

// Set the text color of the password field to blue
document.getElementById("password").style.color = 'blue';